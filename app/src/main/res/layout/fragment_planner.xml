<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“˜ Timetable Planner"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <!-- SUBJECT -->
        <EditText
            android:id="@+id/etSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subject / Study name"
            android:textColor="#FFFFFF"
            android:textColorHint="#94A3B8"
            android:inputType="text"
            android:backgroundTint="#38BDF8"/>

        <!-- DAY OF WEEK SPINNER -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Day:"
            android:textColor="#94A3B8"
            android:layout_marginTop="8dp"/>
        <Spinner
            android:id="@+id/spinnerDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#38BDF8"
            android:padding="8dp"/>

        <!-- NOTES -->
        <EditText
            android:id="@+id/etNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notes (optional)"
            android:textColor="#FFFFFF"
            android:textColorHint="#94A3B8"
            android:minLines="2"
            android:gravity="top"
            android:layout_marginTop="8dp"
            android:inputType="textMultiLine"
            android:backgroundTint="#38BDF8"/>

        <!-- START TIME -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/etStartTime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Start Time"
                android:textColor="#FFFFFF"
                android:textColorHint="#94A3B8"
                android:focusable="false"
                android:clickable="true"
                android:backgroundTint="#38BDF8"/>

            <Spinner
                android:id="@+id/spinnerStartAmPm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- END TIME -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/etEndTime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="End Time"
                android:textColor="#FFFFFF"
                android:textColorHint="#94A3B8"
                android:focusable="false"
                android:clickable="true"
                android:backgroundTint="#38BDF8"/>

            <Spinner
                android:id="@+id/spinnerEndAmPm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- SAVE BUTTON -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Timetable"
            android:textColor="#020617"
            android:backgroundTint="#38BDF8"
            android:layout_marginTop="12dp"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="8dp"/>

        <!-- TABLE -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
                <!-- Rows added dynamically -->
            </TableLayout>
        </HorizontalScrollView>

    </LinearLayout>
</ScrollView>
