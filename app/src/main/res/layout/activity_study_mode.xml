<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvStudyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Study Mode"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Description -->
    <TextView
        android:id="@+id/tvStudyDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stay focused. Distracting apps will be blocked."
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/tvStudyTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"/>

    <!-- Time Label -->
    <TextView
        android:id="@+id/tvTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Study Time (Minutes)"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvStudyDesc"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Time Picker -->
    <NumberPicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTimeLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Blocked Apps Title -->
    <TextView
        android:id="@+id/tvBlockedApps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blocked Apps"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/timePicker"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Default Apps -->
    <TextView
        android:id="@+id/tvDefaultApps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instagram, Snapchat, YouTube"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/tvBlockedApps"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="6dp"/>

    <!-- Start Button -->
    <Button
        android:id="@+id/btnStartStudy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start Study Mode"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvDefaultApps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
