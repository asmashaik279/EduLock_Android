<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸš€ Focus Mode"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lock in and eliminate distractions."
            android:textColor="#94A3B8"
            android:textSize="14sp"
            android:layout_marginBottom="24dp"/>

        <!-- TIMER SECTION -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1E293B"
            app:cardCornerRadius="20dp"
            app:strokeWidth="0dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activate Study Session"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Switch
                        android:id="@+id/switchFocus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:theme="@style/FocusSwitch" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvStudyModeInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your focus session will last for the duration you set below."
                    android:textColor="#94A3B8"
                    android:layout_marginTop="12dp" />

                <NumberPicker
                    android:id="@+id/numberPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:theme="@style/NumberPickerTheme" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- DEFAULT BLOCKED APPS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ›¡ï¸ Default Blocked Apps"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1E293B"
            app:cardCornerRadius="16dp"
            android:layout_marginBottom="20dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDefaultApps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:nestedScrollingEnabled="false" />
        </com.google.android.material.card.MaterialCardView>

        <!-- MANUALLY BLOCKED APPS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Œ Manually Blocked Apps"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1E293B"
            app:cardCornerRadius="16dp"
            android:layout_marginBottom="20dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvManuallyBlocked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:nestedScrollingEnabled="false" />
        </com.google.android.material.card.MaterialCardView>

        <!-- SELECTION SECTION -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“± Select Apps to Block"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select additional apps you want to restrict."
            android:textColor="#94A3B8"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1E293B"
            app:cardCornerRadius="16dp"
            android:layout_marginBottom="12dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAllApps"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:padding="10dp" />
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/btnSaveApps"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Save Selection"
            android:backgroundTint="#38BDF8"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"
            app:cornerRadius="16dp" />

    </LinearLayout>
</ScrollView>
